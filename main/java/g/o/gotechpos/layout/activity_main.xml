<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <RelativeLayout
      android:id="@+id/app_bar"
      android:layout_alignParentTop="true"
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="50sp">

    <TextView
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_marginLeft="7sp"
        android:text="Gotech POS"
        android:textColor="#000"
        android:textSize="21sp" />

    <TextView
        android:layout_alignParentRight="true"
        android:text=""
        android:textSize="22sp"
        android:textColor="#FFF"
        android:layout_marginRight="15sp"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:gravity="center"
        android:onClick="subscribe2Topic"
        android:background="@drawable/ic_notifications_gold"
        />
  </RelativeLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/app_bar"
      >

    <LinearLayout
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".MainActivity">


      <LinearLayout
          android:background="#FFF"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile"
            android:onClick="onCardClick"
            android:layout_marginTop="3sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            app:elevation="10sp"
            android:layout_width="179dp"
            android:layout_height="143dp"
            app:cardCornerRadius="14dp">
          <RelativeLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:id="@+id/profile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="33dp"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#000"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:gravity="center"
                android:src="@drawable/ic_person"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/main_profile_circle"
                android:padding="8sp"
                android:textSize="22sp"
                android:textColor="#FFF"
                />

          </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:onClick="onCardClick"
            android:id="@+id/card_stock"
            app:elevation="10sp"
            app:cardCornerRadius="14dp"
            android:layout_marginTop="3sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="42dp" >
          <RelativeLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/ic_dashboard"
                android:textSize="22sp"
                android:textColor="#FFF"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:background="@drawable/dashboard_shape"
                android:padding="8sp"
                />

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="33dp"
                android:gravity="center"
                android:text="Stock"
                android:textColor="#000"
                android:textSize="20sp" />

          </RelativeLayout>
        </androidx.cardview.widget.CardView>
      </LinearLayout>


      <androidx.cardview.widget.CardView
          android:id="@+id/card_scanner"
          android:onClick="onCardClick"
          android:layout_width="match_parent"
          android:layout_height="155dp"
          android:layout_margin="5sp"
          app:cardCornerRadius="14dp"
          app:elevation="10sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          tools:layout_editor_absoluteY="203dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <TextView
              android:id="@+id/profile_text1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:layout_marginLeft="80sp"
              android:text="Scanner/Calculator"
              android:textColor="#000"
              android:textSize="20sp" />

          <Space
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
          <ImageView
              android:src="@drawable/ic_scan"
              android:padding="8sp"
              android:textSize="22sp"
              android:textColor="#FFF"
              android:layout_marginRight="70sp"
              android:layout_width="50sp"
              android:layout_height="50sp"
              android:gravity="center"
              android:background="@drawable/group_icon"
              />
        </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/card_reports"
          android:onClick="onCardClick"
          android:layout_width="match_parent"
          android:layout_height="155dp"
          android:layout_margin="5sp"
          app:cardCornerRadius="14dp"
          app:elevation="10sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          tools:layout_editor_absoluteY="203dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <TextView
              android:id="@+id/profile_text3"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:layout_marginLeft="80sp"
              android:text="Reports"
              android:textColor="#000"
              android:textSize="20sp" />

          <Space
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
          <ImageView
              android:gravity="center"
              android:padding="8sp"
              android:background="@drawable/group_icon"
              android:src="@drawable/ic_assignment_black_24dp"
              android:textSize="22sp"
              android:textColor="#FFF"
              android:layout_marginRight="70sp"
              android:id="@+id/imageView3"
              android:layout_width="50sp"
              android:layout_height="50sp"
              />
        </LinearLayout>

      </androidx.cardview.widget.CardView>





      <LinearLayout
          android:background="#FFF"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_subscribe"
            android:onClick="onCardClick"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_margin="5sp"
            app:cardCornerRadius="14dp"
            app:elevation="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="203dp">
          <LinearLayout
              android:gravity="center"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="80sp"
                android:text="Subscribe"
                android:textColor="#000"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:padding="8sp"
                android:gravity="center"
                android:src="@drawable/ic_credit_card"
                android:textSize="22sp"
                android:textColor="#FFF"
                android:layout_marginRight="70sp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/green_cicle"
                />
          </LinearLayout>

        </androidx.cardview.widget.CardView>

      </LinearLayout>
      <TextView
          android:onClick="privacyPolicy"
          android:layout_marginTop="11sp"
          android:layout_marginBottom="15sp"
          android:text="Privacy Policy"
          android:gravity="center"
          android:textStyle="bold"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
    </LinearLayout>

  </ScrollView>


</RelativeLayout>